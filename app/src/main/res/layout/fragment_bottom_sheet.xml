<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.enroute.fragments.ReviewBottomSheetDialog">
    <TextView
        android:id="@+id/tvTakePhoto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:onClick="onTakePhotoClick"
        android:text="@string/tvTakePhoto"
        android:gravity="center_vertical"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvGalleryUpload"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:clickable="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="16sp"
        android:onClick="onUploadFromGalleryClick"
        android:gravity="center_vertical"
        android:text="@string/tvGalleryUpload"/>
</LinearLayout>